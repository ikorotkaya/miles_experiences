{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@utils/*": [
        "./src/utils/*"
      ],   
      "@images/*": [
        "./src/images/*"
      ],    
      "@components/*": [
        "./src/components/*"
      ], 
      "@data/*": [
        "./src/data/*"
      ], 
      "@types" :[
        "./src/types.ts"
      ]
    }
  },
  "include": [
    "src"
  ]
}
